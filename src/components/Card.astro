---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	body: string;
	href: string;
	icon: ImageMetadata;
}

const { href, title, body, icon } = Astro.props;
---

<div class="bg-zinc-900 px-5 py-4 rounded-lg hover:ring-2 ring-blue-500 transition-all">
	<a href={href} class="flex flex-col gap-2">
		<h2 class="flex flex-row gap-2 items-center">
			<Image src={icon} alt="" class="w-8" />
			{title}
		</h2>
		<p class="text-white/50">
			{body}
		</p>
	</a>
</div>